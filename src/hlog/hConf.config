
[formatters]
keys: default,error
 
[handlers]
keys: console,console_error,mail

[loggers]
keys: root

[formatter_default]
format: [$COLOR%(levelname)s]%(message)s $RESET 
class=hlog.hlib.ColorFormatter

[formatter_error]
format: [%(levelname)s]:%(asctime)s:[%(lineno)d@%(module)s]: %(message)s
datefmt="%H:%M:%S"
class=logging.Formatter

[handler_console]
class:hlog.hlib.ConsoleInfoHandler
level:DEBUG
args: (sys.stdout,)
formatter: default

[handler_console_error]
class: hlog.hlib.ConsoleErrorHandler
level:ERROR
args: (sys.stderr,)
formatter: error

[handler_mail]
class=handlers.SMTPHandler
level=ERROR
formatter=error
args=('localhost', 'from@abc', ['user1@abc', 'user2@xyz'], 'Logger Subject')

[logger_root]
level: DEBUG
handlers: console
