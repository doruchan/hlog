
[formatters]
keys: default,error
 
[handlers]
keys: console,console_error,mail

[loggers]
keys: root

[formatter_default]
format: [%(levelname)s]::%(message)s
class=logging.Formatter

[formatter_error]
format: [%(levelname)s]:%(asctime)s:[%(lineno)d@%(module)s]: %(message)s
datefmt="%H:%M:%S"
class=logging.Formatter

[handler_console]
class:logging.StreamHandler
level:DEBUG
args: (sys.stdout,)
formatter: default
propagate=0

[handler_console_error]
class: hlog.hlib.ErrorHandler
level:ERROR
args: (sys.stderr,)
formatter: error
propagate=0

[handler_mail]
class=handlers.SMTPHandler
level=ERROR
formatter=error
args=('localhost', 'from@abc', ['user1@abc', 'user2@xyz'], 'Logger Subject')

[logger_root]
level: DEBUG
handlers: console,console_error